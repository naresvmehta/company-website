<%- layout("layouts/boilerplate") %>

<div class="container" style="margin-top: 40px; margin-bottom: 60px;">
  <h2 class="text-center" style="color: #4CAF50; margin-bottom: 30px;">Our Plants</h2>

  <div class="row">
    <% products.forEach(product => { %>
      <div class="col-xs-12 col-sm-6 col-md-4 product-card" style="margin-bottom: 30px;">
        <a href="/products/<%= product._id %>" style="text-decoration: none; color: inherit;">
          <div class="thumbnail" style="border: 1px solid #e0e0e0; padding: 15px; border-radius: 8px;">
            <img src="<%= product.coverImage.url %>" alt="<%= product.title %>" 
                 class="img-responsive" 

                 style="height: 300px; object-fit: contain; width: 100%; border-radius: 5px;">

            <div class="caption text-center" style="margin-top: 10px;">
              <h4 style="color: #2e7d32; font-weight: bold;">
                <%= product.title %>
              </h4>
            </div>
          </div>
        </a>
      </div>
    <% }) %>
  </div>
</div>

<style>
  .thumbnail {
    border: 1px solid #2ad257 !important;
    padding: 15px !important;
    border-radius: 8px !important;
    box-sizing: border-box !important;
    transition: all 0.3s ease !important;
    background-color: #fff !important;
  }

  .product-card a:hover .thumbnail,
  .product-card a:active .thumbnail {
    box-shadow: 0 4px 20px rgba(25, 173, 57, 0.2) !important;
    transform: scale(1.02) !important;
    border-color: #4CAF50 !important;
  }
</style>
