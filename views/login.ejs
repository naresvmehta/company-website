  <style>
    body {
      margin: 0;
      background-color: #f5fdf7;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .login-box {
      background-color: #fff;
      padding: 2.5rem;
      border-radius: 10px;
      box-shadow: 0 4px 12px rgba(34, 139, 34, 0.2);
      width: 100%;
      max-width: 400px;
      text-align: center;
    }

    .login-box h2 {
      margin-bottom: 1.5rem;
      color: #2e7d32;
    }

    .login-box label {
      display: block;
      margin-bottom: 0.5rem;
      font-weight: 600;
      color: #388e3c;
      text-align: left;
    }

    .input-wrapper {
      position: relative;
      margin-bottom: 1.2rem;
      width: 100%;
    }

    input[type="text"],
    input[type="password"] {
      width: 100%;
      padding: 0.6rem 2.8rem 0.6rem 0.6rem;
      border: 1px solid #c8e6c9;
      border-radius: 5px;
      font-size: 1rem;
      outline: none;
      box-sizing: border-box;
      transition: border-color 0.3s;
    }

    input:focus {
      border-color: #66bb6a;
    }

    .toggle-password {
      position: absolute;
      right: 8px;
      top: 50%;
      transform: translateY(-50%);
      width: 24px;
      height: 24px;
      cursor: pointer;
      fill: #4caf50;
      user-select: none;
    }

    /* Style for the diagonal slash */
    .slash {
      stroke: #4caf50;
      stroke-width: 2.2;
      stroke-linecap: round;
    }

    .login-box button {
      width: 100%;
      padding: 0.7rem;
      background-color: #4caf50;
      border: none;
      color: white;
      font-size: 1rem;
      font-weight: bold;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s ease;
      margin-top: 0.5rem;
    }

    .login-box button:hover {
      background-color: #388e3c;
    }

    .login-box a.home-link {
      display: inline-block;
      margin-top: 1rem;
      color: #046bcb;
      text-decoration: none;
      font-weight: 500;
    }

    .login-box a.home-link:hover {
      color: #10bac0;
      text-decoration: underline;
    }

    @media (max-width: 500px) {
      .login-box {
        padding: 2rem;
      }
    }
  </style>
</head>
<body>
  
  <!-- Include flash messages here (2) -->
  <%- include("./includes/flash.ejs") %>



  <div class="login-box">
    <h2>Admin Login</h2>
    <form method="POST" action="/login">
      <label for="username">Username</label>
      <input type="text" id="username" name="username" required placeholder="Enter your username" />

      <label for="password">Password</label>
      <div class="input-wrapper">
        <input type="password" id="password" name="password" required placeholder="Enter your password" />
        
        <!-- Eye Icon with slash, default visible -->
        <svg
          class="toggle-password"
          id="eyeIcon"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <!-- Eye shape -->
          <path
            d="M12 5C7 5 2.73 8.11 1 12c1.73 3.89 6 7 11 7s9.27-3.11 11-7c-1.73-3.89-6-7-11-7z"
            fill="none"
            stroke="#4caf50"
            stroke-width="2"
          />
          <!-- Pupil -->
          <circle
            cx="12"
            cy="12"
            r="3"
            fill="#4caf50"
          />
          <!-- Diagonal Slash -->
          <line class="slash" x1="4" y1="20" x2="20" y2="4" />
        </svg>
      </div>

      <button type="submit">Login</button>
    </form>

    <a href="/home" class="home-link">‚Üê Back to Home</a>
  </div>

  <script>
    const passwordInput = document.getElementById('password');
    const eyeIcon = document.getElementById('eyeIcon');
    const slashLine = eyeIcon.querySelector('.slash');

    eyeIcon.style.cursor = 'pointer';

    eyeIcon.addEventListener('click', () => {
      if (passwordInput.type === 'password') {
        passwordInput.type = 'text';
        slashLine.style.display = 'none';  // Hide slash when visible
      } else {
        passwordInput.type = 'password';
        slashLine.style.display = 'block'; // Show slash when hidden
      }
    });
  </script>

  
